{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="section">
        <div class="container mx-auto px-4 sm:px-8">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="text-4xl font-bold mb-4">Please sign in</h1>

            <form method="post" class="box bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <div class="mb-4">
                    <label for="inputEmail" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" autocomplete="email" required autofocus>
                </div>

                <div class="mb-4">
                    <label for="inputPassword" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                    <input type="password" name="password" id="inputPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="flex items-center justify-center mb-4">
                    <button class="button is-link" type="submit">Sign in</button>
                </div>
                <div class="text-center">
                    <p class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="#">
                        Did you forget your password? <a href="{{ path('app_forgot_password_request') }}">Click here to reset.</a>
                    </p>
                    <span class="mx-2">|</span>
                    <p class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="#">
                        You don't have an account? <a href="{{ path('app_register') }}">Click here to register.</a>
                    </p>
                </div>
            </form>
        </div>
    </section>
{% endblock %}