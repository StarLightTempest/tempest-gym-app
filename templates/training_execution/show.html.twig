{% extends 'base.html.twig' %}

{% block title %}TrainingExecution{% endblock %}

{% block body %}
    <main class="pt-20">
        <div class="table-container w-4/5 mx-auto">
            <h1 class="text-3xl font-bold mb-4 text-center">TrainingExecution</h1>

            <table class="table is-fullwidth">
                <tbody>
                    <tr class="text-center">
                        <th class="px-4 py-2">Id</th>
                        <td class="border px-4 py-2">{{ training_execution.id }}</td>
                    </tr>
                    <tr class="text-center">
                        <th class="px-4 py-2">Date</th>
                        <td class="border px-4 py-2">{{ training_execution.date ? training_execution.date|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr class="text-center">
                        <th class="px-4 py-2">Completed</th>
                        <td class="border px-4 py-2">{{ training_execution.completed ? 'Yes' : 'No' }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="flex justify-between mt-4 mb-4">
                <div class="flex justify-between">
                <a href="javascript:history.back()" class="button is-info px-4 py-2">
                    <span class="icon">
                        <i class="fas fa-arrow-left"></i>
                    </span>
                    <span>Back</span>
                </a>
            </div>
                <a class="button is-success px-4 py-2" href="{{ path('app_training_execution_edit', {'id': training_execution.id}) }}">Edit</a>
                {{ include('training_execution/_delete_form.html.twig') }}
            </div>
        </div>
    </main>
{% endblock %}