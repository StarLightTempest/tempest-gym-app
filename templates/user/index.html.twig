{% extends 'base.html.twig' %}

{% block title %}Management | User{% endblock %}

{% block body %}
    <main class="pt-20 px-8 pb-20">
        <h1 class="text-3xl font-bold mb-4 text-center">User Index</h1>

        {% if is_granted('ROLE_ADMIN') %}
            <!-- Search Bar -->
            <div class="mb-4">
                <input class="w-full px-3 py-2 border rounded" type="text" placeholder="Search people..." id="searchInput">
            </div>
        {% endif %}

        <div class="table-container w-4/5 mx-auto">
            <table class="table is-fullwidth">
                <thead>
                    <tr class="bg-gray-200 text-center">
                        <th class="px-4 py-2">Id</th>
                        <th class="px-4 py-2">Name</th>
                        <th class="px-4 py-2">Height</th>
                        <th class="px-4 py-2">Actions</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                {% if user %}
                    <tr class="text-center hover:bg-gray-100 cursor-pointer">
                        <td class="border px-4 py-2">{{ user.id }}</td>
                        <td class="border px-4 py-2">{{ user.name }}</td>
                        <td class="border px-4 py-2">{{ user.height }}</td>
                        <td class="border px-4 py-2">
                            <a class="button is-small is-link" href="{{ path('app_user_show', {'id': user.id}) }}">View Details</a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="button is-small is-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit User</a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="border px-4 py-2 text-center">No records found</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="flex justify-center mt-4 mb-4">
                <a class="button is-link px-4 py-2" href="{{ path('app_user_new') }}">Add New User</a>
            </div>
        {% endif %}
    </main>

    {% if is_granted('ROLE_ADMIN') %}
        <script>
            // Search functionality
            const searchInput = document.getElementById('searchInput');
            const tableBody = document.getElementById('userTableBody');

            searchInput.addEventListener('keyup', function() {
                const query = searchInput.value.toLowerCase();
                for (const row of tableBody.rows) {
                    const cells = Array.from(row.cells);
                    row.style.display = cells.some(cell => cell.textContent.toLowerCase().includes(query)) ? '' : 'none';
                }
            });
        </script>
    {% endif %}
{% endblock %}