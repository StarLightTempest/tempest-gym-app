{% extends 'base.html.twig' %}

{% block title %}Management | TrainingPlan{% endblock %}

{% block body %}
    <main class="pt-20 px-8">
        <h1 class="text-3xl font-bold mb-4 text-center">TrainingPlan Index</h1>

        <!-- Search Bar -->
        <div class="mb-4">
            <input class="w-full px-3 py-2 border rounded" type="text" placeholder="Search training plans..." id="searchInput">
        </div>

        <div class="table-container w-4/5 mx-auto">
            <table class="table is-fullwidth">
                <thead>
                    <tr class="bg-gray-200 text-center">
                        <th class="px-4 py-2">Id</th>
                        <th class="px-4 py-2">Name</th>
                        <th class="px-4 py-2">Description</th>
                        <th class="px-4 py-2">Weekday</th>
                        <th class="px-4 py-2">Actions</th>
                    </tr>
                </thead>
                <tbody id="trainingPlanTableBody">
                {% for training_plan in training_plans %}
                    <tr class="text-center hover:bg-gray-100 cursor-pointer">
                        <td class="border px-4 py-2">{{ training_plan.id }}</td>
                        <td class="border px-4 py-2">{{ training_plan.name }}</td>
                        <td class="border px-4 py-2">{{ training_plan.description }}</td>
                        <td class="border px-4 py-2">{{ training_plan.weekday }}</td>
                        <td class="border px-4 py-2">
                            <a class="button is-small is-link" href="{{ path('app_training_plan_show', {'id': training_plan.id}) }}">View Details</a>
                            <a class="button is-small is-primary" href="{{ path('app_training_plan_edit', {'id': training_plan.id}) }}">Edit Plan</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="border px-4 py-2 text-center">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="flex justify-center mt-4 mb-4">
            <a class="button is-link px-4 py-2" href="{{ path('app_training_plan_new') }}">Add New Plan</a>
        </div>
    </main>

    <script>
        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const tableBody = document.getElementById('userTableBody');

        searchInput.addEventListener('keyup', function() {
            const query = searchInput.value.toLowerCase();
            for (const row of tableBody.rows) {
                const cells = Array.from(row.cells);
                row.style.display = cells.some(cell => cell.textContent.toLowerCase().includes(query)) ? '' : 'none';
            }
        });
    </script>
{% endblock %}