<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome to Tempest Gym!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css">
            <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
            <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
        {% endblock %}

        {% block javascripts %}
        <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
        {% endblock %}
    </head>
    <body>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
       {% block header %}
<nav class="navbar is-dark" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a class="navbar-item" href="/">
            <img class="h-8 w-auto" src="{{ asset('images/tempest-logo.png') }}" alt="Logo">
        </a>

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
            <a class="navbar-item flex items-center" href="/">
                <i class="fas fa-home mr-2"></i>Homepage
            </a>

            {% if app.user %}
            <a class="navbar-item flex items-center" href="/user-dashboard">
                <i class="fas fa-tachometer-alt mr-2"></i>My Dashboard
            </a>

            {% if app.user and is_granted('ROLE_ADMIN') %}
                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link">
                        Management
                    </a>

                    <div class="navbar-dropdown">
                        <a class="navbar-item" href="/user">
                            <i class="fas fa-users mr-2"></i> Users
                        </a>
                        <a class="navbar-item" href="/training-plan">
                            <i class="fas fa-calendar-alt mr-2"></i> Training Plan
                        </a>
                        <a class="navbar-item" href="/machines">
                            <i class="fas fa-cogs mr-2"></i> Machines
                        </a>
                        <a class="navbar-item" href="/training-plan-x-machine">
                            <i class="fas fa-dumbbell mr-2"></i> Training Plan X Machine
                        </a>
                        <a class="navbar-item" href="/training-execution">
                            <i class="fas fa-running mr-2"></i> Training Execution
                        </a>
                        <a class="navbar-item" href="/weight-history">
                            <i class="fas fa-weight mr-2"></i> Weight History
                        </a>
                    </div>
                </div>
            {% endif %}
            {% endif %}

            <a class="navbar-item" href="/help">
                <i class="fas fa-question-circle mr-2"></i>Help
            </a>
        </div>

        <div class="navbar-end">
            <div class="navbar-item">
                <div class="buttons">
                    {% if app.user %}
                    <a class="button is-light" href="{{ path('app_logout') }}">
                        <i class="fas fa-sign-out-alt"></i>Logout
                    </a>
                    {% else %}
                    <a class="button is-light" href="/login">
                        <i class="fas fa-sign-in-alt"></i>Log in
                    </a>
                    <a class="button is-light" href="/register">
                        <i class="fas fa-user-plus"></i>Register
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</nav>

<script>
    document.addEventListener('DOMContentLoaded', () => {

        const $navbarBurger = document.querySelector('.navbar-burger');
        const $navbarMenu = document.getElementById('navbarBasicExample');

        // Toggle the visibility of the navbar menu when the hamburger icon is clicked
        $navbarBurger.addEventListener('click', () => {
            $navbarBurger.classList.toggle('is-active');
            $navbarMenu.classList.toggle('is-active');
        });

    });
</script>
{% endblock %}







        {% block body %}

        {% endblock %}

        {% block footer %}
            <footer class="footer has-background-dark has-text-white">
                <div class="content has-text-centered">
                    <div class="columns is-centered is-vcentered">
                    <div class="column is-narrow">
                        <a href="/agb" class="has-text-white hover:text-blue-500">AGB</a>
                    </div>
                    <div class="column is-narrow">
                        <a href="/impressum" class="has-text-white hover:text-blue-500">Impressum</a>
                    </div>
                    <div class="column is-narrow">
                        <a href="/datenschutz" class="has-text-white hover:text-blue-500">Datenschutz</a>
                    </div>
                    <div class="column is-narrow">
                        <a href="/kontakt" class="has-text-white hover:text-blue-500">Kontakt</a>
                    </div>
                    </div>
                    <p><a href="/" class="has-text-white hover:text-blue-500">© Tempest Gym</a> Technologies Inc. 2024</p>
                </div>
            </footer>
        {% endblock %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    </body>
</html>
