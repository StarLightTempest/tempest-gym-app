<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome to Tempest Gym!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css">
            <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav class="navbar is-dark" role="navigation" aria-label="main navigation">
                <div class="navbar-brand">
                    <a class="navbar-item" href="/">
                        <img class="h-8 w-auto" src="{{ asset('images/tempest-logo.png') }}" alt="Logo">
                    </a>
                </div>

                <div id="navbarBasicExample" class="navbar-menu">
                    <div class="navbar-start">
                        <a class="navbar-item flex items-center" href="/">
                            <i class="fas fa-home mr-2"></i>  Homepage
                        </a>

                        <div class="navbar-item has-dropdown is-hoverable">
                            <a class="navbar-link">
                                Management
                            </a>

                            <div class="navbar-dropdown">
                                <a class="navbar-item" href="/person">
                                    Persons
                                </a>
                                <a class="navbar-item" href="/training-plan">
                                    Training Plan
                                </a>
                                <a class="navbar-item" href="/machines">
                                    Machines
                                </a>
                                <a class="navbar-item" href="/training-plan-x-machine">
                                    Training Plan X Machine
                                </a>
                                <a class="navbar-item" href="/training-execution">
                                    Training Execution
                                </a>
                                <a class="navbar-item" href="/weight-history">
                                    Weight History
                                </a>
                            </div>
                        </div>

                        <a class="navbar-item" href="/help">
                            <i class="fas fa-question-circle mr-2"></i> Help
                        </a>
                    </div>

                    <div class="navbar-end">
                        <div class="navbar-item">
                            <div class="buttons">
                                <a class="button is-light" href="/login">
                                    Log in
                                </a>
                                <a class="button is-light" href="/register">
                                    Register
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        {% endblock %}

        {% block body %}

        {% endblock %}

        {% block footer %}
            <footer class="footer has-background-dark has-text-white">
                <div class="content has-text-centered">
                    <div class="columns is-centered is-vcentered">
                    <div class="column is-narrow">
                        <a href="/agb" class="has-text-white hover:text-blue-500">AGB</a>
                    </div>
                    <div class="column is-narrow">
                        <a href="/impressum" class="has-text-white hover:text-blue-500">Impressum</a>
                    </div>
                    <div class="column is-narrow">
                        <a href="/datenschutz" class="has-text-white hover:text-blue-500">Datenschutz</a>
                    </div>
                    <div class="column is-narrow">
                        <a href="/kontakt" class="has-text-white hover:text-blue-500">Kontakt</a>
                    </div>
                    </div>
                    <p><a href="/" class="has-text-white hover:text-blue-500">© Tempest Gym</a> Technologies Inc. 2024</p>
                </div>
            </footer>
        {% endblock %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    </body>
</html>
