{% extends 'base.html.twig' %}

{% block body %}
<main class="pt-6 bg-gray-100 min-h-screen pb-16" style="background: url('{{ asset ('images/homepage-pic1.png') }}') no-repeat center center fixed; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;">
<div class="container mx-auto px-4 bg-white bg-opacity-75 rounded-lg p-6">
    <!-- Section 1.1: Topic -->
    <section class="my-8">
        <h1 class="text-4xl font-bold text-center text-blue-500">Welcome to Our Tempest Gym App!</h1>
        <p class="text-lg text-center mt-4">Join us and start your journey to a healthier lifestyle. Track your progress, manage your training plans and stay motivated!</p>
    </section>

    <!-- Section 2: Sign Up -->
    <section class="my-8">
        <h2 class="text-2xl font-bold mb-4 text-blue-500">Sign Up to start</h2>
        <div class="flex justify-center">
            <a class="button bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" href="{{ path('app_register') }}">Sign Up</a>
        </div>
    </section>
</div>
</main>
{% endblock %}