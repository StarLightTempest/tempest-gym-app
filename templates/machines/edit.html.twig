{% extends 'base.html.twig' %}

{% block title %}Edit Machines{% endblock %}

{% block body %}
    <main class="pt-20">
        <div class="table-container w-4/5 mx-auto">
            <h1 class="text-3xl font-bold mb-4 text-center">Edit Machines</h1>

            {% if machine.pictureURL %}
                <div class="mb-4">
                    <img src="{{ machine.pictureURL }}" alt="Machine Picture">
                </div>
            {% endif %}

            {{ include('machines/_form.html.twig',) }}
            
           <div class="flex justify-between mt-4 mb-4">
                <div class="flex justify-between">
                    <a href="javascript:history.back()" class="button is-info px-4 py-2">
                        <span class="icon">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                        <span>Back</span>
                    </a>
                </div>
                <div>
                    {{ include('machines/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}