{% extends 'base.html.twig' %}

{% block title %}Machines{% endblock %}

{% block body %}
    <main class="pt-20">
        <div class="table-container w-4/5 mx-auto">
            <h1 class="text-3xl font-bold mb-4 text-center">Machines</h1>

            <table class="table is-fullwidth">
                <thead>
                    <tr class="bg-gray-200 text-center">
                        <th class="px-4 py-2">Id</th>
                        <th class="px-4 py-2">Name</th>
                        <th class="px-4 py-2">Max Capacity</th>
                        <th class="px-4 py-2">Weight Increment</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="text-center">
                        <td class="border px-4 py-2">{{ machine.id }}</td>
                        <td class="border px-4 py-2">{{ machine.name }}</td>
                        <td class="border px-4 py-2">{{ machine.maxCapacity }}</td>
                        <td class="border px-4 py-2">{{ machine.weightIncrement }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="flex justify-between mt-4 mb-4">
                <a class="button is-link px-4 py-2" href="{{ path('app_machines_index') }}">Back to list</a>
                <a class="button is-success px-4 py-2" href="{{ path('app_machines_edit', {'id': machine.id}) }}">Edit</a>
                {{ include('machines/_delete_form.html.twig') }}
            </div>
        </div>
    </main>
{% endblock %}
