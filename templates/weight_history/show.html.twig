{% extends 'base.html.twig' %}

{% block title %}WeightHistory{% endblock %}

{% block body %}
    <main class="pt-20">
        <div class="table-container w-4/5 mx-auto">
            <h1 class="text-3xl font-bold mb-4 text-center">WeightHistory</h1>

            <table class="table is-fullwidth">
                <tbody>
                    <tr class="text-center">
                        <th class="px-4 py-2">Id</th>
                        <td class="border px-4 py-2">{{ weight_history.id }}</td>
                    </tr>
                    <tr class="text-center">
                        <th class="px-4 py-2">Date</th>
                        <td class="border px-4 py-2">{{ weight_history.date ? weight_history.date|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr class="text-center">
                        <th class="px-4 py-2">Weight</th>
                        <td class="border px-4 py-2">{{ weight_history.weight }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="flex justify-between mt-4 mb-4">
                <a class="button is-link px-4 py-2" href="{{ path('app_weight_history_index') }}">Back to list</a>
                <a class="button is-success px-4 py-2" href="{{ path('app_weight_history_edit', {'id': weight_history.id}) }}">Edit</a>
                {{ include('weight_history/_delete_form.html.twig') }}
            </div>
        </div>
    </main>
{% endblock %}