{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <section class="section">
        <div class="container mx-auto px-4 sm:px-8">
            <h1 class="text-4xl font-bold mb-4">Reset your password</h1>

            {{ form_start(resetForm, {'attr': {'class': 'box bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4'}}) }}
                <div class="mb-4">
                    <label for="plainPassword" class="block text-gray-700 text-sm font-bold mb-2">New Password</label>
                    {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                </div>

                <div class="flex items-center justify-center mb-4">
                    <button class="button is-link" type="submit">Reset password</button>
                </div>
            {{ form_end(resetForm) }}
        </div>
    </section>
{% endblock %}