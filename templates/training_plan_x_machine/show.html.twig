{% extends 'base.html.twig' %}

{% block title %}TrainingPlanXMachine{% endblock %}

{% block body %}
    <main class="pt-20">
        <div class="table-container w-4/5 mx-auto">
            <h1 class="text-3xl font-bold mb-4 text-center">TrainingPlanXMachine</h1>

            <table class="table is-fullwidth">
                <tbody>
                    <tr class="text-center">
                        <th class="px-4 py-2">Id</th>
                        <td class="border px-4 py-2">{{ training_plan_x_machine.id }}</td>
                    </tr>
                    <tr class="text-center">
                        <th class="px-4 py-2">Weight</th>
                        <td class="border px-4 py-2">{{ training_plan_x_machine.weight }}</td>
                    </tr>
                    <tr class="text-center">
                        <th class="px-4 py-2">Intervals</th>
                        <td class="border px-4 py-2">{{ training_plan_x_machine.intervals }}</td>
                    </tr>
                    <tr class="text-center">
                        <th class="px-4 py-2">Repetitions</th>
                        <td class="border px-4 py-2">{{ training_plan_x_machine.repetitions }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="flex justify-between mt-4 mb-4">
                <a class="button is-link px-4 py-2" href="{{ path('app_training_plan_x_machine_index') }}">Back to list</a>
                <a class="button is-success px-4 py-2" href="{{ path('app_training_plan_x_machine_edit', {'id': training_plan_x_machine.id}) }}">Edit</a>
                {{ include('training_plan_x_machine/_delete_form.html.twig') }}
            </div>
        </div>
    </main>
{% endblock %}